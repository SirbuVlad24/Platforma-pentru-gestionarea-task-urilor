datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model User {
  id        String        @id @default(cuid())
  name      String?
  email     String        @unique
  password  String
  role      Role          @default(USER)
  createdAt DateTime      @default(now())

  assignedTasks UsersOnTasks[]   // relația many-to-many
  projects      UsersOnProjects[]   // membri ai proiectelor
  projectAdmins ProjectsAdmins[]    // admini ai proiectelor
}

model Task {
  id          Int             @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean         @default(false)
  priority    TaskPriority    @default(MEDIUM)
  status      TaskStatus      @default(TODO)
  createdAt   DateTime        @default(now())
  projectId   Int?

  assignedUsers UsersOnTasks[]   // relația many-to-many
  project        Project?        @relation(fields: [projectId], references: [id], onDelete: SetNull)
}

model UsersOnTasks {
  id        Int      @id @default(autoincrement())
  userId    String
  taskId    Int
  assignedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([userId, taskId])
}

model Project {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime        @default(now())

  tasks       Task[]
  members     UsersOnProjects[]
  admins      ProjectsAdmins[]
}

model UsersOnProjects {
  id        Int      @id @default(autoincrement())
  userId    String
  projectId Int
  joinedAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model ProjectsAdmins {
  id        Int      @id @default(autoincrement())
  userId    String
  projectId Int
  assignedAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}
